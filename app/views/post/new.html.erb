<%= form_with(model: Post.new) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
<br>
  <div class="field">
    <%= form.label :body %>
    <%= form.rich_text_area :body %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>